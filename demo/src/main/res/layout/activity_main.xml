<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.github.pelmenstar1.rangecalendar.RangeCalendarView
        android:id="@+id/rangeCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rangeCalendar_isSelectionAnimatedByDefault="true" />

    <Button
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/switchTheme"/>

    <Button
        android:id="@+id/clearSelectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/clearSelection"/>
</LinearLayout>